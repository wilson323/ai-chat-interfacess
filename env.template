# 环境配置模板
# 复制此文件为 .env 并填入实际值

# 环境配置
NODE_ENV=development
LOG_LEVEL=info

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_chat
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# 数据库连接池配置
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# API配置
API_BASE_URL=http://localhost:3000
API_TIMEOUT=30000
API_RETRIES=3

# 速率限制配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_ENABLED=true

# 功能开关
ENABLE_VOICE=true
ENABLE_FILE_UPLOAD=true
ENABLE_IMAGE_UPLOAD=true
ENABLE_STREAMING=true
ENABLE_MONITORING=true

# 文件上传配置
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md,dwg,dxf,step,stp,mp3,wav,mp4

# 存储配置
UPLOAD_PATH=./uploads
TEMP_PATH=./temp
CLOUD_STORAGE_PROVIDER=local
MAX_STORAGE_SIZE_MB=1000

# 安全配置
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000

# AWS配置（如果使用云存储）
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# 监控配置
MONITORING_ENDPOINT=http://localhost:9090

# AI模型API配置
# 通义千问
QWEN_API_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/multimodal-generation/generation
QWEN_API_KEY=your_qwen_api_key_here

# GLM
GLM_API_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_API_KEY=your_glm_api_key_here

# OpenAI
OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
OPENAI_API_KEY=your_openai_api_key_here
WHISPER_API_ENDPOINT=https://api.openai.com/v1/audio/transcriptions
WHISPER_API_KEY=your_openai_api_key_here
TTS_API_ENDPOINT=https://api.openai.com/v1/audio/speech
TTS_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_ENDPOINT=https://api.anthropic.com/v1/messages
ANTHROPIC_API_KEY=your_anthropic_api_key_here
